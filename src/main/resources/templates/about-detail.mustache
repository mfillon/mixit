<div>
    <div class="firstname">{{firstname}}</div>
    <div class="lastname">{{lastname}}</div>
    <div class="mxt-img-avatar__wrapper">
        <a href="/user/{{login}}">
            {{#emailHash}}
                <img src="https://www.gravatar.com/avatar/{{emailHash}}?size=400"
                     class="mxt-img-avatar__speaker"
                     aria-label="{{firstname}} {{lastname}}
                             photo"/>
            {{/emailHash}}
            {{^emailHash}}
                {{#photoUrl}}
                    <img src="{{photoUrl}}"
                         class="mxt-img-avatar__speaker"
                         aria-label="{{firstname}} {{lastname}}
                                 photo"/>
                {{/photoUrl}}
            {{/emailHash}}
        </a>
    </div>
</div>
