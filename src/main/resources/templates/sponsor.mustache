<div class="mb-5" id="{{sponsor.login}}">
</div>
<div class="row pt-5">
    <div class="col-12 col-sm-4 text-center">
        {{#sponsor.isAbsoluteLogo}}
            <picture>
                <source srcset="{{sponsor.photoUrl}}" type="{{sponsor.logoType}}" alt="{{sponsor.company}}"
                        class="mxt-img--sponsors">
                <img data-src="{{sponsor.photoUrl}}" id="{{#urlEncode}}{{sponsor.login}}{{/urlEncode}}"
                     alt="{{sponsor.company}}" class="mxt-img--sponsors mxt-img--lazyload">
            </picture>
        {{/sponsor.isAbsoluteLogo}}
        {{^sponsor.isAbsoluteLogo}}
            <picture>
                <source srcset="{{sponsor.photoUrl}}" type="{{sponsor.logoType}}" alt="{{sponsor.company}}"
                        class="mxt-img--sponsors">
                <img src="{{sponsor.photoUrl}}" data-src="{{sponsor.photoUrl}}"
                     id="{{#urlEncode}}{{sponsor.login}}{{/urlEncode}} alt="{{sponsor.company}}"
                     class="mxt-img--sponsors mxt-img--lazyload">
            </picture>
        {{/sponsor.isAbsoluteLogo}}
    </div>
    <div class="col-12 col-sm-8 columns">
        <h3 class="subheader">{{sponsor.company}}</h3>
        {{#markdown}}{{sponsor.description}}{{/markdown}}
        <ul class="mxt-wrapper-list-inline">
            {{#sponsor.links}}
                <li><a href="{{url}}" target="_blank">{{name}}</a></li>
            {{/sponsor.links}}
        </ul>
    </div>
</div>
