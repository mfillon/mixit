{{> header}}

{{> header-common }}

<div class="mxt-wrapper--header-page-title">
    <h1 class="pt-3 pb-3">
        {{#i18n}}talks.title{{#topic}}.{{topic}}{{/topic}}{{/i18n}}
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1"
                data-bs-toggle="dropdown" aria-expanded="false">
            {{year}}
        </button>
        <ul class="dropdown-menu mxt-dropdown-header" aria-labelledby="dropdownMenuButton1">
            <li><a href="{{localePrefix}}/2023{{#topic}}/{{topic}}{{/topic}}" class="dropdown-item">2023</a></li>
            <li><a href="{{localePrefix}}/2022{{#topic}}/{{topic}}{{/topic}}" class="dropdown-item">2022</a></li>
            <li><a href="{{localePrefix}}/2021{{#topic}}/{{topic}}{{/topic}}" class="dropdown-item">2021</a></li>
            <li><a href="{{localePrefix}}/2019{{#topic}}/{{topic}}{{/topic}}" class="dropdown-item">2019</a></li>
            <li><a href="{{localePrefix}}/2018{{#topic}}/{{topic}}{{/topic}}" class="dropdown-item">2018</a></li>
            <li><a href="{{localePrefix}}/2017{{#topic}}/{{topic}}{{/topic}}" class="dropdown-item">2017</a></li>
            <li><a href="{{localePrefix}}/2016{{#topic}}/{{topic}}{{/topic}}" class="dropdown-item">2016</a></li>
            <li><a href="{{localePrefix}}/2015{{#topic}}/{{topic}}{{/topic}}" class="dropdown-item">2015</a></li>
            <li><a href="{{localePrefix}}/2014{{#topic}}/{{topic}}{{/topic}}" class="dropdown-item">2014</a></li>
            <li><a href="{{localePrefix}}/2013{{#topic}}/{{topic}}{{/topic}}" class="dropdown-item">2013</a></li>
            <li><a href="{{localePrefix}}/2012{{#topic}}/{{topic}}{{/topic}}" class="dropdown-item">2012</a></li>
        </ul>
    </h1>
</div>

{{^talks.entrySet}}
    <div class="container mxt-wrapper--page-content pb-4">


        <div class="row mxt-home-round-header mb-4">
            <div class="col-12 text-center">
                <a href="https://sessionize.com/mixit2023/" target="_blank" alt="{{#i18n}}home.intro.cfp{{/i18n}}">
                    <button><img src="/images/svg/mxt-icon-cfp.svg"></button>
                    <div>{{#i18n}}home.intro.cfp.title{{/i18n}}</div>
                </a>
                <div>{{#i18n}}home.intro.cfp{{/i18n}}</div>
            </div>
        </div>

        <p class="lead">{{#i18n}}talks.content{{/i18n}}</p>

        <div class="mxt-tracks row">
            <div class="col-12 col-md-6 col-lg-4 row pt-2">
                <div class="col-4 col-md-3 col-lg-3 text-center">
                    <img src="/images/svg/mxt-icon--tech.svg" class="mxt-icon--cat__home"
                         alt="{{#i18n}}home.topics.tech.title{{/i18n}}">
                </div>
                <div class="col-8 col-md-9 col-lg-9">
                    <h3 style="margin-bottom: -0.2rem;">{{#i18n}}home.topics.tech.title{{/i18n}}</h3>
                    <small>{{#i18n}}home.topics.tech.description{{/i18n}}</small>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-4 row pt-2">
                <div class="col-4 col-md-3 col-lg-3 text-center">
                    <img src="/images/svg/mxt-icon--design.svg" class="mxt-icon--cat__home"
                         alt="{{#i18n}}home.topics.design.title{{/i18n}}">
                </div>
                <div class="col-8 col-md-9 col-lg-9">
                    <h3 style="margin-bottom: -0.2rem;">{{#i18n}}home.topics.design.title{{/i18n}}</h3>
                    <small>{{#i18n}}home.topics.design.description{{/i18n}}</small>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-4 row pt-2">
                <div class="col-4 col-md-3 col-lg-3 text-center">
                    <img src="/images/svg/mxt-icon--aliens.svg" class="mxt-icon--cat__home"
                         alt="{{#i18n}}home.topics.aliens.title{{/i18n}}">
                </div>
                <div class="col-8 col-md-9 col-lg-9">
                    <h3 style="margin-bottom: -0.2rem;">{{#i18n}}home.topics.aliens.title{{/i18n}}</h3>
                    <small>{{#i18n}}home.topics.aliens.description{{/i18n}}</small>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-4 row pt-2">
                <div class="col-4 col-md-3 col-lg-3 text-center">
                    <img src="/images/svg/mxt-icon--team.svg" class="mxt-icon--cat__home"
                         alt="{{#i18n}}home.topics.team.title{{/i18n}}">
                </div>
                <div class="col-8 col-md-9 col-lg-9">
                    <h3 style="margin-bottom: -0.2rem;">{{#i18n}}home.topics.team.title{{/i18n}}</h3>
                    <small>{{#i18n}}home.topics.team.description{{/i18n}}</small>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-4 row pt-2">
                <div class="col-4 col-md-3 col-lg-3 text-center">
                    <img src="/images/svg/mxt-icon--ethics.svg" class="mxt-icon--cat__home"
                         alt="{{#i18n}}home.topics.ethics.title{{/i18n}}">
                </div>
                <div class="col-8 col-md-9 col-lg-9">
                    <h3 style="margin-bottom: -0.2rem;">{{#i18n}}home.topics.ethics.title{{/i18n}}</h3>
                    <small>{{#i18n}}home.topics.ethics.description{{/i18n}}</small>
                </div>
            </div>
        </div>
    </div>
{{/talks.entrySet}}
{{#hasTalk}}
    <div class="container mxt-wrapper--page-content mb-4">
        <div class="container mb-2">
            <div class="row mxt-home-round-header" style="justify-content: center;">
                {{#schedulingFileUrl}}
                    <div class="col-12 col-md-6 col-lg-3">
                        <a href="{{schedulingFileUrl}}" target="_blank" alt="{{#i18n}}talks.schedule{{/i18n}}">
                            <button><img src="/images/svg/mxt-icon-file-pdf.svg"></button>
                            <div>{{#i18n}}talks.schedule{{/i18n}}</div>
                        </a>
                        <div>{{#i18n}}talks.schedule.download{{/i18n}}</div>
                    </div>
                {{/schedulingFileUrl}}
                <div class="col-12 col-md-6 col-lg-3">
                    <a href="{{localePrefix}}/{{year}}/medias{{#topic}}/{{topic}}{{/topic}}"
                       alt="{{#i18n}}talks.medias{{/i18n}}">
                        <button><img src="/images/svg/mxt-icon-video.svg"></button>
                        <div>{{#i18n}}medias.title{{/i18n}}</div>
                    </a>
                    <div>{{#i18n}}talks.medias{{/i18n}}</div>
                </div>
                {{#connected}}
                    {{^filtered}}
                        <div class="col-12 col-md-6 col-lg-3">
                            <a href="{{localePrefix}}/{{year}}{{#topic}}/{{topic}}{{/topic}}/favorite"
                               alt="{{#i18n}}talks.favorites.filter{{/i18n}}">
                                <button><img src="/images/svg/favorites/mxt-favorite-white.svg"></button>
                                <div>{{#i18n}}talks.favorites.filter.active{{/i18n}}</div>
                            </a>
                            <div>{{#i18n}}talks.favorites.filter{{/i18n}}</div>
                        </div>
                    {{/filtered}}
                {{/connected}}
            </div>
        </div>
    </div>
    <div class="container mxt-wrapper--page-content pb-4">
        <!-- Area used when user want to see the agenda view -->
        {{> talks-day-tab-criteria }}
        <ul class="nav nav-tabs mxt-nav-tabs" id="talks" role="tablist">
            {{#talks.day1}}
                {{> talks-day-tab }}
            {{/talks.day1}}
            {{#talks.day2}}
                {{> talks-day-tab }}
            {{/talks.day2}}
            {{#talks.day3}}
                {{> talks-day-tab }}
            {{/talks.day3}}
        </ul>
        <div class="tab-content">
            <div class="text-center lead p-2 mb-2">{{#i18n}}talks.welcome.start{{/i18n}}</div>
            {{#displayAgenda}}
                {{#talks.day1}}
                    {{> talks-day-tab-content-agenda }}
                {{/talks.day1}}
                {{#talks.day2}}
                    {{> talks-day-tab-content-agenda }}
                {{/talks.day2}}
                {{#talks.day3}}
                    {{> talks-day-tab-content-agenda }}
                {{/talks.day3}}
            {{/displayAgenda}}
            {{^displayAgenda}}
                {{#talks.day1}}
                    {{> talks-day-tab-content }}
                {{/talks.day1}}
                {{#talks.day2}}
                    {{> talks-day-tab-content }}
                {{/talks.day2}}
                {{#talks.day3}}
                    {{> talks-day-tab-content }}
                {{/talks.day3}}
            {{/displayAgenda}}
        </div>
    </div>
{{/hasTalk}}
{{> sponsor-footer }}

{{#connected}}
    <input type="hidden" id="email" value="{{email}}"/>
{{/connected}}

{{> footer}}
